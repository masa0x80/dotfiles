{
  "allowCompoundWords": true,
  "dictionaries": ["dotfiles", "dotfiles_local", "user", "vim", "ruby", "lua"],
  "dictionaryDefinitions": [
    {
      "name": "dotfiles",
      "path": "~/.config/cspell/dotfiles.txt",
      "description": "dotfiles dictionary"
    },
    {
      "name": "dotfiles_local",
      "path": "~/.config.local/cspell/local.txt",
      "description": "dotfiles.local dictionary"
    },
    {
      "name": "user",
      "path": "~/.local/share/cspell/user.txt",
      "description": "User local dictionary"
    },
    {
      "name": "lua",
      "path": "~/.local/share/cspell/lua.txt",
      "description": "Lua dictionary"
    },
    {
      "name": "ruby",
      "path": "~/.local/share/cspell/ruby.txt",
      "description": "Ruby and RoR dictionary"
    },
    {
      "name": "vim",
      "path": "~/.local/share/cspell/vim.txt",
      "description": "Vim Script dictionary"
    }
  ],
  "languageSettings": [
    {
      "languageId": "*",
      "locale": "*",
      "ignoreRegExpList": ["/(?:tap|brew|cask) .*/", "/.*\\/.*/"]
    },
    {
      "languageId": "lua",
      "locale": "*",
      "ignoreRegExpList": ["/require.*/", "/<Cmd>.*/", "/<Plug>\\(.*\\)/"],
      "dictionaries": ["lua", "vim"]
    },
    {
      "languageId": "vim",
      "locale": "*",
      "ignoreRegExpList": [],
      "dictionaries": ["vim"]
    }
  ]
}
