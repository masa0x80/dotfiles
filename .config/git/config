[core]
  autocrlf = false
  excludesfile = ~/.config/git/ignore
  pager = gitpager
  hooksPath = ~/.config/git/hooks
  quotepath = false
[init]
	defaultBranch = main
[include]
  path = ~/.config.local/git/config
[push]
  default = current
[commit]
  verbose = true
[merge]
  ff = false
[fetch]
  prune = true
[pull]
  rebase = true
[rebase]
  autosquash = true
[credential]
  helper = osxkeychain
[pager]
  show = "gitpager --pattern='^(commit|added|deleted|modified):? '"
  log = "gitpager --pattern='^(commit|added|deleted|modified):? '"
  branch = cat
[color]
  diff        = always
  status      = always
  branch      = always
  interactive = always
[alias]
  initial-commit = commit --allow-empty -m 'Initial commit'
  issue-id = !git rev-parse --abbrev-ref @ | grep -Eo '([A-Z0-9_]+-[0-9]+|[0-9]*)' | head -n1
  current-branch = rev-parse --abbrev-ref HEAD
  default-branch = !git symbolic-ref refs/remotes/origin/HEAD | grep -oP 'refs/remotes/origin/\\K.*'
  fixup = !git commit --fixup $(git fzf) --no-verify
  delete-merged-branches = !git branch --merged | grep -E -v '^\\*|\\s(main|develop|master)$' | xargs git branch -d
[ghq]
  root = ~/go/src
  root = ~/.ghq
[harrow]
  disabled = true
[diff "sopsdiffer"]
	textconv = sops -d
