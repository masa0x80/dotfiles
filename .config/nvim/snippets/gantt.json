{
  "startgantt": {
    "prefix": "startgantt",
    "body": [
      "@startuml",
      "@startgantt",
      "",
      "' Config {{{",
      "!\\$normal = 13",
      "!\\$large  = 15",
      "!\\$color = {",
      "  \"black\":   \"#16160e\", \"grey\":         \"#dcdddd\",",
      "  \"red\":     \"#ae2012\", \"light_red\":    \"#e6bcb7\",",
      "  \"pink\":    \"#e95295\", \"light_pink\":   \"#e8bacf\",",
      "  \"orange\":  \"#ee9b00\", \"light_orange\": \"#e9d8a6\",",
      "  \"purple\":  \"#7846a8\", \"light_purple\": \"#d2c1e2\",",
      "  \"blue\":    \"#0a4d96\", \"light_blue\":   \"#b5c9df\",",
      "  \"cyan\":    \"#0099cc\", \"light_cyan\":   \"#bce2e8\",",
      "  \"green\":   \"#4a8e3b\", \"light_green\":  \"#cde8c7\",",
      "  \"silver\":  \"#71706e\", \"light_silver\": \"#efefef\",",
      "  \"scarlet\": \"#d3381c\"",
      "}",
      "",
      "!procedure setColor(\\$name)",
      "  !if \\$name == 'black'",
      "    !global \\$dark = \\$color.black",
      "    !global \\$light = \\$color.grey",
      "  !elseif \\$name == 'red'",
      "    !global \\$dark = \\$color.red",
      "    !global \\$light = \\$color.light_red",
      "  !elseif \\$name == 'pink'",
      "    !global \\$dark = \\$color.pink",
      "    !global \\$light = \\$color.light_pink",
      "  !elseif \\$name == 'orange'",
      "    !global \\$dark = \\$color.orange",
      "    !global \\$light = \\$color.light_orange",
      "  !elseif \\$name == 'purple'",
      "    !global \\$dark = \\$color.purple",
      "    !global \\$light = \\$color.light_purple",
      "  !elseif \\$name == 'blue'",
      "    !global \\$dark = \\$color.blue",
      "    !global \\$light = \\$color.light_blue",
      "  !elseif \\$name == 'cyan'",
      "    !global \\$dark = \\$color.cyan",
      "    !global \\$light = \\$color.light_cyan",
      "  !elseif \\$name == 'green'",
      "    !global \\$dark = \\$color.green",
      "    !global \\$light = \\$color.light_green",
      "  !elseif \\$name == 'silver'",
      "    !global \\$dark = \\$color.silver",
      "    !global \\$light = \\$color.light_silver",
      "  !endif",
      "!endprocedure",
      "setColor('black')",
      "",
      "!procedure resetSeparator()",
      "  <style>",
      "  ganttDiagram {",
      "    separator {",
      "      BackgroundColor \\$color.light_silver",
      "      LineColor transparent",
      "    }",
      "  }",
      "  </style>",
      "!endprocedure",
      "",
      "!procedure fixSeparator()",
      "  <style>",
      "  ganttDiagram {",
      "    separator {",
      "      BackgroundColor transparent",
      "      LineColor \\$color.silver",
      "    }",
      "  }",
      "  </style>",
      "!endprocedure",
      "",
      "!function is_date(\\$date)",
      "  !return %substr(\\$date, 0, 1) != '['",
      "!endfunction",
      "",
      "!function end_wrap(\\$date)",
      "  !if is_date(\\$date)",
      "    !return \\$date",
      "  !else",
      "    !return \\$date + \"'s end\"",
      "  !endif",
      "!endfunction",
      "",
      "!procedure milestone(\\$name, \\$date, \\$asName = '')",
      "  !global \\$name = \\$name",
      "  !global \\$date = \\$date",
      "  !if \\$asName == ''",
      "    [\\$name] happens at end_wrap(\\$date) and is colored in \\$dark",
      "  !else",
      "    [\\$name] as [\\$asName] happens at end_wrap(\\$date) and is colored in \\$dark",
      "  !endif",
      "  !if is_date(\\$date)",
      "    \\$date is colored in \\$light",
      "  !endif",
      "!endprocedure",
      "",
      "<style>",
      "ganttDiagram {",
      "  milestone {",
      "    FontSize \\$normal",
      "    FontColor \\$color.black",
      "  }",
      "  task {",
      "    FontSize \\$normal",
      "    FontColor \\$color.black",
      "  }",
      "  note {",
      "    FontSize \\$normal",
      "    FontColor \\$color.black",
      "  }",
      "  arrow {",
      "    FontColor \\$color.black",
      "  }",
      "  timeline {",
      "    FontColor \\$color.black",
      "  }",
      "  separator {",
      "    FontSize \\$large",
      "    FontColor \\$color.black",
      "  }",
      "}",
      "</style>",
      "resetSeparator()",
      "' }}}",
      "",
      "language ja",
      "' printscale daily zoom 2",
      "projectscale weekly with calendar date",
      "",
      "!\\$start_date = %date('yyyy-MM-') + '01'",
      "!\\$end_date  = %date('yyyy-') + '12-31'",
      "project starts \\$start_date",
      "print between \\$start_date and \\$end_date",
      "",
      "today is colored in \\$color.scarlet",
      "",
      "@endgantt",
      "@enduml"
    ]
  },
  "black": {
    "prefix": "gantt-color-black",
    "body": ["setColor('black')"]
  },
  "red": {
    "prefix": "gantt-color-red",
    "body": ["setColor('red')"]
  },
  "pink": {
    "prefix": "gantt-color-pink",
    "body": ["setColor('pink')"]
  },
  "orange": {
    "prefix": "gantt-color-orange",
    "body": ["setColor('orange')"]
  },
  "purple": {
    "prefix": "gantt-color-purple",
    "body": ["setColor('purple')"]
  },
  "blue": {
    "prefix": "gantt-color-blue",
    "body": ["setColor('blue')"]
  },
  "cyan": {
    "prefix": "gantt-color-cyan",
    "body": ["setColor('cyan')"]
  },
  "green": {
    "prefix": "gantt-color-green",
    "body": ["setColor('green')"]
  },
  "silver": {
    "prefix": "gantt-color-silver",
    "body": ["setColor('silver')"]
  },
  "milestone": {
    "prefix": "gantt-milestone",
    "body": [
      "!\\$name = '$1'",
      "!\\$date = '$2'",
      "[\\$name] happens \\$date and is colored in \\$dark",
      "' [\\$name] happens at []'s end and is colored in \\$dark",
      "\\$date is colored in \\$light"
    ]
  },
  "task": {
    "prefix": "gantt-task",
    "body": [
      "!\\$name = '$1'",
      "[\\$name] is colored in white/\\$dark",
      "[\\$name] starts at \\$start_date",
      "[\\$name] requires 2 weeks",
      "' [\\$name] starts at []'s end",
      "' [\\$name] ends at \\$end_date",
      "' [\\$name] ends at []'s end"
    ]
  },
  "task-red": {
    "prefix": "gantt-task-red",
    "body": [
      "!\\$name = '$1'",
      "!\\$dark = \\$color.red",
      "!\\$name = '<color:' + \\$color.red + '>' + \\$name",
      "[\\$name] is colored in white/\\$dark",
      "[\\$name] starts at \\$start_date",
      "[\\$name] ends at \\$end_date"
    ]
  },
  "task-transparent": {
    "prefix": "gantt-task-transparent",
    "body": ["[$1] starts \\$date and is colored in transparent"]
  },
  "displays-on-same-row": {
    "prefix": "gantt-displays-on-same-row",
    "body": ["[\\$name] displays on same row as [$1]"]
  },
  "link": {
    "prefix": "gantt-link",
    "body": ["[\\$name] links to [[$1]]"]
  },
  "separator-style#1": {
    "prefix": "gantt-reset-separator",
    "body": ["resetSeparator()"]
  },
  "separator-style#2": {
    "prefix": "gantt-fix-separator",
    "body": ["fixSeparator()"]
  },
  "font-red": {
    "prefix": "gantt-font-red",
    "body": ["<color:$color.red>"]
  },
  "font-green": {
    "prefix": "gantt-font-green",
    "body": ["<color:$color.green>"]
  },
  "font-blue": {
    "prefix": "gantt-font-blue",
    "body": ["<color:$color.blue>"]
  }
}
