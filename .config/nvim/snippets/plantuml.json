{
  "startgantt": {
    "prefix": "startgantt",
    "body": [
      "@startuml",
      "@startgantt",
      "",
      "<style>",
      "ganttDiagram {",
      "  milestone {",
      "    FontSize 13",
      "  }",
      "  task {",
      "    FontSize 13",
      "  }",
      "  note {",
      "    FontSize 13",
      "    BackGroundColor white",
      "  }",
      "  separator {",
      "    FontSize 13",
      "  }",
      "  timeline {",
      "    FontSize 13",
      "  }",
      "}",
      "</style>",
      "",
      "language ja",
      "printscale daily zoom 3",
      "projectscale weekly with calendar date",
      "",
      "project starts $1",
      "today is colored in #e06666",
      "",
      "@endgantt",
      "@enduml"
    ]
  },
  "milestone-red": {
    "prefix": "ms-red",
    "body": [
      "[$1] happens $2 and is colored in #ae2012",
      "$2 is colored in #e6bcb7",
      "' [* hoge] starts $2 and is colored in transparent"
    ]
  },
  "milestone-orange": {
    "prefix": "ms-orange",
    "body": [
      "[$1] happens $2 and is colored in #ee9b00",
      "$2 is colored in #e9d8a6",
      "' [* hoge] starts $2 and is colored in transparent"
    ]
  },
  "milestone-blue": {
    "prefix": "ms-blue",
    "body": [
      "[$1] happens $2 and is colored in #0a4d96",
      "$2 is colored in #b5c9df",
      "' [* hoge] starts $2 and is colored in transparent"
    ]
  },
  "milestone-green": {
    "prefix": "ms-green",
    "body": [
      "[$1] happens $2 and is colored in #4a8e3b",
      "$2 is colored in #cde8c7",
      "' [* hoge] starts $2 and is colored in transparent"
    ]
  },
  "milestone-purple": {
    "prefix": "ms-purple",
    "body": [
      "[$1] happens $2 and is colored in #7846a8",
      "$2 is colored in #d2c1e2",
      "' [* hoge] starts $2 and is colored in transparent"
    ]
  },
  "milestone-black": {
    "prefix": "ms-black",
    "body": [
      "[$1] happens $2 and is colored in black",
      "$2 is colored in silver",
      "' [* hoge] starts $2 and is colored in transparent"
    ]
  },
  "task-simple": {
    "prefix": "task",
    "body": ["[$1] starts $2 and ends $3"]
  },
  "task-with-link": {
    "prefix": "task-with-link",
    "body": ["[$1] starts $2 and ends $3 and links to [[$4]]"]
  },
  "link": {
    "prefix": "link",
    "body": ["and links to [[$4]]"]
  }
}
