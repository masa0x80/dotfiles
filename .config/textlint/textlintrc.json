{
  "rules": {
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": "never",
        "lintStyledNode": true
      },
      "ja-no-space-around-parentheses": true,
      "ja-space-around-code": {
        "before": true,
        "after": true
      },
      "ja-space-after-exclamation": false,
      "ja-space-after-question": false
    },
    "doubled-spaces": true,
    "no-zero-width-spaces": true,
    "terminology": {
      "exclude": ["e2e"]
    },
    "prh": {
      "rulePaths": ["~/.config/textlint/prh-rules.yaml"]
    },
    "@textlint-rule/no-invalid-control-character": true
  },
  "filters": {
    "allowlist": {
      "allow": [
        "/\\[.*\\] /",
        "/ \\[.*\\]/",
        " of ",
        " at ",
        " to ",
        " on ",
        " in ",
        " for ",
        " by ",
        " from ",
        " with ",
        " w/ ",
        " without ",
        " w/o ",
        " as ",
        " vs ",
        " or ",
        " and ",
        " via ",
        "/ x /",
        "/ x[0-9]+/",
        "/ ref\\. /",
        "/[a-zA-Z0-9]+-[0-9]+ /",
        "/ [0-9]{2}/",
        "/[0-9]{2} /",
        "/[0-9]. /",
        "/#.+ /",
        "/.+\\. /"
      ]
    }
  }
}
