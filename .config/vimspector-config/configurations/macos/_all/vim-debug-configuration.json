{
  "configurations": {
    "attach": {
      "adapter": "vscode-node",
      "default": true,
      "breakpoints": {
        "exception": {
          "all": "N",
          "uncaught": "N"
        }
      },
      "configuration": {
        "type": "node",
        "name": "Launch",
        "adapter": "vscode-node-debug2",
        "request": "attach",
        "host": "127.0.0.1",
        "port": "9229",
        "skipFiles": ["*/<node_internals>/**/*.js", "node_modules/**/*.js"]
      }
    },
    "jest": {
      "adapter": "vscode-node",
      "breakpoints": {
        "exception": {
          "all": "N",
          "uncaught": "N"
        }
      },
      "configuration": {
        "request": "launch",
        "name": "Jest debugger",
        "type": "node",
        "runtimeArgs": [
          "--inspect-brk",
          "./node_modules/.bin/jest",
          "--no-converge",
          "-t",
          "'${TestName}'",
          "--",
          "${file}"
        ],
        "console": "integratedTerminal",
        "skipFiles": ["*/<node_internals>/**/*.js", "node_modules/**/*.js"],
        "port": "9229",
        "internalConsoleOptions": "neverOpen"
      }
    }
  }
}
