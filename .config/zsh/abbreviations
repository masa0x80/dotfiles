abbr watch='watch -n 0.5'

abbr md='mkdir -p'
abbr rd=rmdir
abbr rf='rm -rf'

# git {{{
abbr ga='git add'
abbr gaa='git add --all'

abbr gb='git branch'
abbr gba='git branch -a'
abbr gbr='git branch --remote'

abbr gc='git commit -v'
abbr gc!='git commit -v --amend'
abbr gco='git checkout'

abbr gd='git diff'
abbr gds='git diff --staged'

abbr gf='git fetch -p'

abbr gfx='git fixup'

abbr lg='git fzf show'

abbr glg='git log --stat --color'
abbr glgp='git log --stat --color -p'
abbr glog='git log --oneline --color --graph'

abbr gm='git merge --no-ff'

abbr gp='git push'
abbr gpull=git_pull_and_prune
abbr gpush='git push'
abbr gpush!='git push --force-with-lease'

abbr grb='git rebase'
abbr grbm="git rebase $(git symbolic-ref refs/remotes/origin/HEAD | grep -oP 'refs/remotes/\K.*')"

abbr grba='git rebase --abort'
abbr grbc='git rebase --continue'
abbr grbi='git rebase -i'
abbr grbs='git rebase --skip'

abbr gri='git rebase -i $(git fzf)'

abbr gsh='git show'
abbr gst='git status -sb'
abbr gts='git tag -s'

abbr gwt='git worktree'
abbr gwta='git worktree add'
abbr gwtr='git worktree remove'
abbr gwtp='git worktree prune'

abbr M="git switch $(git symbolic-ref refs/remotes/origin/HEAD | grep -oP 'refs/remotes/origin/\K.*')"
abbr br='git switch -c'
abbr review='git review $(git fzf)'
# }}}

