{
  "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
  "format.enable": false,
  "color": {
    "mode": "SemanticEnhanced"
  },
  "diagnostics": {
    "disable": ["close-non-object"],
    "ignoredFiles": "Opened",
    "libraryFiles": "Opened",
    "neededFileStatus": {
      "await-in-sync": "Any",
      "discard-returns": "Any",
      "not-yieldable": "Any",
      "undefined-field": "Any"
    }
  },
  "hint": {
    "enable": true
  },
  "workspace": {
    "maxPreload": 3600,
    "preloadFileSize": 3000
  }
}
