#!/usr/bin/env fish

function files
  set -l path .
  if test "$argv" != ''
    set path (string unescape -- $argv | string escape -n)
  end
  if type -qa fd
    type fzf >/dev/null || return 1
    fd --type f --no-ignore --hidden --follow --exclude .git $path
  else
    find $path -type f
  end
end
files $argv
