#!/bin/zsh

git_prompt_path=$(brew --prefix git)/etc/bash_completion.d/git-prompt.sh
if [ -e $git_prompt_path ]; then
  source $git_prompt_path

  local GIT_PS1_SHOWDIRTYSTATE=1
  local GIT_PS1_SHOWUPSTREAM=1
  local GIT_PS1_SHOWUNTRACKEDFILES=
  local GIT_PS1_SHOWSTASHSTATE=1

  echo -n $(__git_ps1)
fi
