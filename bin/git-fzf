#!/usr/bin/env zsh

if [ "$1" = 'show' ]; then
    # fshow - git commit browser
    # ref: https://github.com/junegunn/fzf/wiki/Examples
    git log --graph --color=always \
        --format="%C(auto)%h%d %s %C(blue)%cr %C(green)%cN" | \
        fzf --ansi --no-sort --tiebreak=index +m \
        --bind "ctrl-m:execute: echo {} | grep -o '[a-f0-9]\{7\}' | head -n1 | xargs -I % sh -c 'printf % | pbcopy; git show %'"
else
    # fetch git commit hash
    git log --graph --color=always \
        --format="%C(auto)%h%d %s %C(blue)%cr %C(green)%cN" | \
        fzf --ansi --no-sort --tiebreak=index +m | grep -o '[a-f0-9]\{7\}' | head -n1 | xargs -I % sh -c 'printf % | pbcopy; echo %'
fi
