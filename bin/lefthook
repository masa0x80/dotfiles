#!/bin/bash

if [ "$LEFTHOOK" = "0" ]; then
  exit 0
fi

# Disable lefthook install
if [ "$1" = 'install' ]; then
  echo "** DISABLED **"
  exit 0
fi

if [ -t 1 ] ; then
  exec < /dev/tty ; # <- enables interactive shell
fi

lefthook_bin=$(brew --prefix lefthook)/bin/lefthook

call_lefthook() {
  local pj_root=$(git rev-parse --show-toplevel)
  [ ! -e "${pj_root}/lefthook.yml" ] && [ ! -e "${pj_root}/lefthook-local.yml" ] && return 0

  if $lefthook_bin -h >/dev/null 2>&1
  then
    $lefthook_bin $@
    lefthook_status=$?
    if test $lefthook_status -ne 0; then
      exit $lefthook_status
    fi
  else
    echo "Can't find lefthook in PATH"
  fi
}

call_lefthook $@
_call_git_hook $@
