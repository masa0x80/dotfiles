#!/bin/sh

dir_name=$(dirname $0)
cd $dir_name; cd ..;
mitamae_root=$(pwd)

mitamae_version=1.3.2
case $(uname) in
  Linux)
    mitamae_bin=mitamae-x86_64-linux
    mitamae_sha256=92633a9a9aad0506aa555ae722496285f80aca75c0173d0ed1614fbef371fbfb
    ;;
  Darwin)
    mitamae_bin=mitamae-x86_64-darwin
    mitamae_sha256=1775a7600e3c2464f9a33f62505c11b5691df9b0ecd36840fb587bb9bc04b295
    ;;
  *)
    echo "unexpected uname: $(uname)"
    exit 1
esac

if ! [ -f "${mitamae_root}/bin/${mitamae_bin}" ]; then
  curl -o "${mitamae_root}/bin/${mitamae_bin}.tar.gz" -fL "https://github.com/k0kubun/mitamae/releases/download/v${mitamae_version}/${mitamae_bin}.tar.gz"
  sha256=$(/usr/bin/openssl dgst -sha256 ${mitamae_root}/bin/${mitamae_bin}.tar.gz | cut -d ' ' -f 2)
  if [ "$mitamae_sha256" != "$sha256" ]; then
    echo "checksum verification failed!\nexpected: ${mitamae_sha256}\n  actual: ${sha256}"
    exit 1
  fi
  tar xzf "${mitamae_root}/bin/${mitamae_bin}.tar.gz"

  rm "${mitamae_root}/bin/${mitamae_bin}.tar.gz"
  mv "${mitamae_bin}" "${mitamae_root}/bin"
  chmod +x "${mitamae_root}/bin/${mitamae_bin}"
fi
ln -sf "${mitamae_root}/bin/${mitamae_bin}" "${mitamae_root}/bin/mitamae"
